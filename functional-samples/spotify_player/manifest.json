{
  "manifest_version": 3,
  "name": "Spotify Player",
  "version": "1.0",
  "description": "A simple Spotify player extension",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://api.spotify.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.spotify.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
