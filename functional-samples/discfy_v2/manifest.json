{
  "manifest_version": 3,
  "name": "Spotify Discogs Extension",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "declarativeContent": {
    "pageChanged": {
      "conditions": [
        {
          "pageUrl": {
            "hostEquals": "open.spotify.com"
          }
        }
      ],
      "actions": [
        {
          "type": "execute_script",
          "script": {
            "src": "scripts/contentScript.js"
          }
        }
      ]
    }
  },
  "manifest_version": 3
}
